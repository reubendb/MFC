################ Compiler options ####################
# Gets the MFC directory [do not modify]
MFC_DIR:=$(shell dirname $(realpath $(lastword $(MAKEFILE_LIST))))

### Compiler command ###
FC = mpif90
#FC = mpiifort
   
### Compiler flags [set according to your compiler] ### 
#Note: Requires -cpp to enable preprocessor 

FFLAGS = -cpp -c -w -O2
